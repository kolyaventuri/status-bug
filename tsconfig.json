{
  "extends": "./tsconfig/tsconfig.base.json",
  "exclude": [
    "node_modules",
    "webpack"
  ],
  "include": [
    "src",
    "test"
  ],
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@fixtures/*": ["fixtures/*"],
      "@helpers/*": ["test/helpers/*"]
    }
  }
}
